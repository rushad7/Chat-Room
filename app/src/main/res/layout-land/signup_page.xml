<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameField"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" android:layout_marginEnd="99dp" android:layout_marginRight="99dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toTopOf="@+id/passwordField"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="99dp"
            android:layout_marginStart="99dp" android:hint="@string/username" android:autofillHints="no"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordField"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="50dp" app:layout_constraintBottom_toTopOf="@+id/signUpButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="99dp"
            android:layout_marginStart="99dp" android:hint="@string/password" android:autofillHints="no"
            app:layout_constraintTop_toBottomOf="@+id/usernameField"/>
    <Button
            android:text="@string/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/signUpButton"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordField" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="174.5dp" android:layout_marginStart="174.5dp" android:layout_marginEnd="174.5dp"
            android:layout_marginRight="174.5dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
    />

</androidx.constraintlayout.widget.ConstraintLayout>